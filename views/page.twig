{% extends "base.twig" %}

{% block content %}
<div class="post-type-{{post.post_type}}" id="post-{{post.ID}}">	
	<div class="row">
		<div class="columns medium-12">
			<h1 class="page-title">{{ post.title }}</h1>
		</div>
	</div>
	<div class="row">
		<div class="columns medium-12">
			{{ post.the_content }}
		</div>
	</div>
</div>
{% endblock %}